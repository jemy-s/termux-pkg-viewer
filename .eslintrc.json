{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": false,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    },
    "sourceType": "module"
  },
  "globals": {
    "Promise": true
  },
  "rules": {
    "no-console": "off",
    "quotes": ["error", "double"],
    "space-infix-ops": "error",
    "space-unary-ops": "error",
    "block-spacing": ["error", "always"],
    "brace-style": "error",
    "comma-dangle": "error",
    "comma-spacing": "error",
    "computed-property-spacing": "error",
    "indent": ["warn", 2, {"SwitchCase": 1}],
    "max-depth": ["error", 3],
    "max-len": "error"
  }
}

